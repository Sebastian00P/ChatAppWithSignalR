@model ChatAppWithSignalR.ViewModels.PasswordRoomViewModel

<div class="room-form">
    <form id="joinRoomForm" asp-action="GetMessages" asp-controller="Room">
        @Html.AntiForgeryToken()
        <div hidden>
            <label for="RoomId" class="text-white"></label>
            <input type="text" name="RoomId" value="@Model.RoomId" />
        </div>
        <div id="pass-section" class="pass-section">
            <label for="Password" class="text-white">Hasło:</label>
            <input id="passwordInput" type="password" name="Password" placeholder="Wpisz hasło" />
        </div>

        <div class="flex">
            <button type="submit" id="submitRoomButton" class="join-button">Dołącz</button>
            <button type="button" class="cancel-button" onclick="cancel();">Anuluj</button>
        </div>
    </form>
</div>
<style>
    .pass-section {
        display: flex;
        flex-direction: column;
    }

    .room-form {
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 300px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #172a46;
        border-radius: 8px;
        box-shadow: 0 4px 40px rgba(10, 25, 47, 1);
        background-color: #172a46;
    }

        .room-form label {
            font-weight: bold;
            margin-bottom: 8px;
            color: #333;
        }

        .room-form input[type="text"],
        .room-form input[type="password"] {
            padding: 8px;
            border: 1px solid #ccc;
            border-radius: 4px;
            margin-bottom: 16px;
            font-size: 1rem;
            width: 250px;
        }

        .room-form button {
            padding: 10px 15px;
            border: none;
            border-radius: 4px;
            font-size: 1rem;
            cursor: pointer;
            transition: background-color 0.3s ease;
            margin-top: 10px;
        }

            .room-form button[type="submit"] {
                padding: 8px 12px;
                background-color: #007bff;
                color: white;
                border: none;
                border-radius: 4px;
                font-size: 14px;
                cursor: pointer;
                transition: background-color 0.3s ease, transform 0.2s ease;
            }

                .room-form button[type="submit"]:hover {
                    background-color: #0056b3;
                }

    .cancel-button {
        background-color: #f44336;
        color: white;
        margin-left: auto;
        transition: background-color 0.3s ease, transform 0.2s ease;
    }

        .cancel-button:hover {
            background-color: #ff9637;
        }

    .flex {
        display: flex;
    }
</style>