@model string

<div class="room-form">
    <form asp-action="CreateRoom" asp-controller="Room" method="post">
        @Html.AntiForgeryToken()

        <label for="chatName">Nazwa pokoju:</label>
        <input type="text" id="chatName" name="chatName" placeholder="Wpisz nazwę pokoju" required />
        <div class="flex">
            <button type="submit">Zapisz</button>
            <button type="button" class="cancel-button" onclick="document.getElementById('createRoom').style.display='none';">Anuluj</button>
        </div>
    </form>
</div>

<style>
    .room-form {
        display: flex;
        flex-direction: column;
        width: 100%;
        max-width: 300px;
        margin: 20px auto;
        padding: 20px;
        border: 1px solid #ddd;
        border-radius: 8px;
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        background-color: #f9f9f9;
    }

    .room-form label {
        font-weight: bold;
        margin-bottom: 8px;
        color: #333;
    }

    .room-form input[type="text"] {
        padding: 8px;
        border: 1px solid #ccc;
        border-radius: 4px;
        margin-bottom: 16px;
        font-size: 1rem;
    }

    .room-form button {
        padding: 10px 15px;
        border: none;
        border-radius: 4px;
        font-size: 1rem;
        cursor: pointer;
        transition: background-color 0.3s ease;
        margin-top: 10px;
    }

    .room-form button[type="submit"] {
        background-color: #4CAF50;
        color: white;
    }

    .room-form button[type="submit"]:hover {
        background-color: #45a049;
    }

    .cancel-button {
        background-color: #f44336;
        color: white;
        margin-left: auto;
    }

    .cancel-button:hover {
        background-color: #e53935;
    }
    .flex{
        display: flex;
    }
</style>
